<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbgbg">

    <TextView
        android:id="@+id/judullog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/montsemi"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="Login"
        android:textColor="#22272B"
        android:textSize="40dp" />

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/judullog"
        >


        <TextView
            android:id="@+id/LogEmail"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Email"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etLogEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LogEmail"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/popmedium"
            android:inputType="textEmailSubject"
            android:maxLength="20"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/LogPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etLogEmail"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Password"
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etLogPass"
            android:layout_width="300dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LogPass"
            android:fontFamily="@font/popreg"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etLogPass"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#22272B"
            android:fontFamily="@font/popmedium"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="Login"
            app:cornerRadius="50dp"/>

        <Button
            android:id="@+id/btnSwitch2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#22272B"
            android:fontFamily="@font/popmedium"
            android:text="Register"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="50dp" />

    </RelativeLayout>

</RelativeLayout>