<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbgbg">

    <TextView
        android:id="@+id/judulreg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/montsemi"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:text="Register"
        android:textColor="#22272B"
        android:textSize="40dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/judulreg"
        >


        <TextView
            android:id="@+id/FN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/poppinsbold"
            android:text="First Name"
            android:textColor="#22272B"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etFN"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/FN"
            android:fontFamily="@font/popmedium"
            android:hint="First Name"
            android:inputType="text"
            android:maxLength="20"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/LN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etFN"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Last Name"
            android:textColor="#22272B"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etLN"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LN"
            android:fontFamily="@font/popreg"
            android:hint="Last Name"
            android:inputType="text"
            android:layout_marginLeft="15dp"
            android:maxLength="20"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/RegEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etLN"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:layout_marginLeft="15dp"
            android:text="Email"
            android:textColor="#22272B"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etRegEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RegEmail"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/popreg"
            android:hint="Email"
            android:inputType="textEmailSubject"
            android:maxLength="20"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etRegEmail"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Password"
            android:layout_marginLeft="15dp"
            android:textColor="#22272B"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/etPass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/Pass"
            android:fontFamily="@font/popreg"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnRegist"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPass"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:text="Register"
            android:backgroundTint="#22272B"
            android:fontFamily="@font/popmedium"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="50dp"/>

        <Button
            android:id="@+id/btnSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnRegist"
            android:layout_alignParentRight="true"
            android:text="Back to Login"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/popmedium"
            android:backgroundTint="@android:color/white"/>


    </RelativeLayout>

</RelativeLayout>